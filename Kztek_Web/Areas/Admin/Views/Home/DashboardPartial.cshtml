@model Kztek_Library.Models.PC_Tree

@if (Model.objPC != null)
{
    <div class="container" style="text-align:center">
        <h1 class="level-1 rectangle">@Model.objPC.pc_Name</h1>
        @if (Model.LanePCs.Count > 0)
        {
            <ol class="level-2-wrapper">
                @foreach (var itemL in Model.LanePCs)
                {
                <li>
                    <h2 class="level-2 rectangle">@itemL.lane_Name</h2>
                    @if (Model.Controllers.Count > 0)
                    {
                        <ol class="level-3-wrapper">
                            <li>
                                <h3 class="level-3 rectangle">Bộ điều khiển</h3>
                                <ol class="level-4-wrapper">
                                    @foreach (var itemC in Model.Controllers)
                                    {
                                        <li>
                                            <h4 class="level-4 rectangle">@itemC.controller_Name</h4>
                                        </li>
                                        
                                    }
                                </ol>
                            </li>
